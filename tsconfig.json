{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,       // Generate .d.ts files
    "declarationMap": true,    // Optional, generates source maps for declarations
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/test/test.ts"]
}
